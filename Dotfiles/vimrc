let mapleader = " "


" Some Basics
:set relativenumber
:set rnu
:set number
:set nu
:set tabstop=2
:syntax on
:set wildmode=longest,list,full 
:set nocompatible

" Toggle Nerd Tree Plugin
map <C-o> :NERDTreeToggle<CR>

" Fold {
map <C-f> <Esc>$zfa{ 

" Word count for latex :WC
function! WC()
    let filename = expand("%")
    let cmd = "detex " . filename . " | wc -w | tr -d [:space:]"
    let result = system(cmd)
    echo result . " words"
endfunction

command WC call WC()


" Toggle Spell checker
map <leader>o :set spell!<CR>

" Jump to spot
map <leader><leader> /<++><Enter>4xi

" From Luke Smith
map <leader>s <C-w>v
map <leader>ss <C-w>s
map <C-h> <C-w>h
map <C-j> <C-w>j
map <C-k> <C-w>k
map <C-l> <C-w>l


